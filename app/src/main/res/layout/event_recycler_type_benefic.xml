<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/green_200"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/event_benefic_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_baseline_euro_24" />

    <TextView
        android:id="@+id/event_benefic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/event_benefic_icon"
        app:layout_constraintTop_toTopOf="@id/event_benefic_icon"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"

        />
    <TextView
        android:id="@+id/event_benefic_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/event_benefic_icon"
        app:layout_constraintTop_toBottomOf="@id/event_benefic_title"
        />

    <TextView
        android:id="@+id/event_benefic_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/event_benefic_icon"
        app:layout_constraintTop_toBottomOf="@id/event_benefic_description"

        />

    <TextView
        android:id="@+id/event_benefic_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/event_benefic_icon"
        app:layout_constraintTop_toBottomOf="@id/event_benefic_address"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/event_benefic_confirm_btn"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:icon="@drawable/ic_baseline_add_circle_24"
        app:iconGravity="textStart"
        android:backgroundTint="@color/green_200"
        app:iconSize="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/event_benefic_icon"
        app:layout_constraintBottom_toBottomOf="@id/event_benefic_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>