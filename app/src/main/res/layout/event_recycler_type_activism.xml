<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/red_200"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/event_activism_icon"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_baseline_diversity_1_24" />

    <TextView
        android:id="@+id/event_activism_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/event_activism_icon"
        app:layout_constraintTop_toTopOf="@id/event_activism_icon"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"

        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/event_activism_description"
        android:layout_width="150dp"
        android:singleLine="false"
        android:inputType="textMultiLine"
        android:scrollHorizontally="false"
        android:maxLines="100"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/event_activism_icon"
        app:layout_constraintTop_toBottomOf="@id/event_activism_title"

        />

    <TextView
        android:id="@+id/event_activism_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toRightOf="@id/event_activism_icon"
        app:layout_constraintTop_toBottomOf="@id/event_activism_description"

        />

    <TextView
        android:id="@+id/event_activism_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/event_activism_icon"
        app:layout_constraintTop_toBottomOf="@id/event_activism_address"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/event_activism_confirm_btn"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:backgroundTint="@color/red_200"
        app:icon="@drawable/ic_baseline_person_add_24"
        app:iconGravity="textStart"
        app:iconSize="50dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/event_activism_icon"
        app:layout_constraintBottom_toBottomOf="@id/event_activism_icon"
        />
</androidx.constraintlayout.widget.ConstraintLayout>